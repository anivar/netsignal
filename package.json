{
  "name": "netsignal",
  "version": "1.0.0",
  "description": "Ultra-fast network state for React Native 0.80+ (New Architecture)",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "!android/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "network",
    "connectivity",
    "turbomodule",
    "new-architecture"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/netsignal.git"
  },
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/netsignal/issues"
  },
  "homepage": "https://github.com/yourusername/netsignal#readme",
  "peerDependencies": {
    "react": "*",
    "react-native": ">=0.80.0"
  },
  "devDependencies": {
    "@react-native/eslint-config": "^0.74.0",
    "@types/react": "^18.2.44",
    "react": "18.3.1",
    "react-native": "0.80.0",
    "react-native-builder-bob": "^0.23.0",
    "release-it": "^17.0.0",
    "typescript": "^5.3.3"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "NativeNetSignal",
    "type": "modules",
    "jsSrcsDir": "./src",
    "android": {
      "javaPackageName": "com.netsignal"
    }
  }
}