{
  "name": "netsignal",
  "version": "0.2.0",
  "description": "Instant network detection for React Native and Web - Turbo Module enabled",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "exports": {
    ".": {
      "types": "./lib/typescript/index.d.ts",
      "react-native": "./lib/module/index.native.js",
      "browser": "./lib/module/index.web.js",
      "import": "./lib/module/index.js",
      "require": "./lib/commonjs/index.js",
      "default": "./lib/commonjs/index.js"
    },
    "./web": {
      "types": "./lib/typescript/index.web.d.ts",
      "import": "./lib/module/index.web.js",
      "require": "./lib/commonjs/index.web.js",
      "default": "./lib/commonjs/index.web.js"
    },
    "./native": {
      "types": "./lib/typescript/index.native.d.ts",
      "import": "./lib/module/index.native.js",
      "require": "./lib/commonjs/index.native.js",
      "default": "./lib/commonjs/index.native.js"
    },
    "./hooks": {
      "types": "./lib/typescript/hooks.d.ts",
      "react-native": "./src/hooks.ts",
      "import": "./lib/module/hooks.js",
      "require": "./lib/commonjs/hooks.js"
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "netsignal.podspec",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "prepare": "bob build",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "jest"
  },
  "keywords": [
    "react-native",
    "network",
    "connectivity",
    "turbo-module",
    "new-architecture",
    "ios",
    "android",
    "web",
    "network-detection",
    "offline",
    "internet"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anivar/netsignal.git"
  },
  "author": "Anivar A Aravind <ping@anivar.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anivar/netsignal/issues"
  },
  "homepage": "https://github.com/anivar/netsignal#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@react-native/babel-preset": "^0.75.0",
    "@react-native/eslint-config": "^0.75.0",
    "@testing-library/react-native": "^12.5.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.1",
    "@types/react": "^18.3.3",
    "@types/react-native": "^0.73.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "react": "^18.3.1",
    "react-native": "^0.75.0",
    "react-native-builder-bob": "^0.30.0",
    "react-test-renderer": "^18.3.1",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0 || >=19.0.0",
    "react-native": ">=0.72.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "NetSignalSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.netsignal"
    }
  }
}
